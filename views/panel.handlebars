<div id="header">
    <img src="/img/logo.svg" alt="Logo do Discoderia">
    <h2>Ei, Turista</h2>
</div>

<div id="container3">
    <div id="historic">
        {{#if historic}}
        {{#each historic}}
        <div class="item">
            <img class="img-item" src="/img/{{this.type}}.svg" />
            <p class="title-item">{{this.local}}</p>
        </div>
        {{/each}}
        {{else}}
        <div class="item">
            <p class="title-item">Nenhum local visitado ainda.</p>
        </div>
        {{/if}}
    </div>
    <div id="atractions">
        <div  class="atraction"
            style="background-image: linear-gradient(19deg, #FAACA8 0%, #DDD6F3 100%);">
            <i class="fas fa-check"></i>
            <p style="">Check-in</p>
        </div>
        <div class="atraction" style="background-image: linear-gradient(62deg, #FBAB7E 0%, #F7CE68 100%);">
            <i class="fas fa-star"></i>
            <p style="">Desafios</p>
        </div>
        <div class="atraction" style="background-image: linear-gradient(0deg, #08AEEA 0%, #2AF598 100%);">
            <i class="fas fa-coins"></i>
            <p style="">Meus CapiCoins</p>
        </div>
        <div onclick="window.location = '/atraction?keyword='" class="atraction" style="background-image: linear-gradient(0deg, #08AEEA 0%, #2AF598 100%)">
            <i class="fas fa-ellipsis-h"></i>
            <p style="">Outras Atividades</p>
        </div>

    </div>
</div>